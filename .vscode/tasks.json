{
    "version": "2.0.0",
    "tasks": [
        {
        "type": "shell",
        "label": "sphinx-autobuild",
        "command": "sphinx-autobuild",
        "args": ["docs", "docs/_build/html"],
        "options": {
            "cwd": "${workspaceFolder}"
        },
        "group": "none",
        "presentation": {
            "reveal": "always",
            "panel": "new"
          }
        }
    ]
}